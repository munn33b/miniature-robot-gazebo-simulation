<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="model" default="$(find miniature_robot_description)/urdf/miniature_robot_description.urdf.xacro"/>
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <!-- <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/empty.world"/> -->
    <arg name="world_name" value="$(find miniature_robot_description)/worlds/drive_environment.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="debug" value="$(arg debug)"/>
    <!--by activating "verbose" mode, Gazebo prints more to terminal on launch.-->
    <arg name="verbose" value="true"/>
  </include>

 <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)"/>

 <node name="robot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param robot_description -model miniature_robot -x 0.663025 -y -0.449473 -z 0.045598 -R 0 -P 0 -Y -3.14" />

 <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

</launch>
